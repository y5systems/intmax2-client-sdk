{
  "name": "intmax2-server-sdk",
  "version": "1.0.8",
  "description": "Server SDK for Intmax2",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm run copy-wasm && rollup -c rollup.config.mjs",
    "build:esm": "rimraf dist && tsc -p tsconfig.esm.json && pnpm run copy-wasm",
    "copy-wasm": "mkdir -p dist && cp -r src/wasm/node/* dist/",
    "prepare": "pnpm build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --max-warnings=0 --fix"
  },
  "keywords": [
    "sdk",
    "client",
    "intmax2"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@scure/bip39": "^1.5.1",
    "axios": "^1.7.9",
    "viem": "^2.22.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "node": "^22.13.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.32.1",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18"
  }
}
